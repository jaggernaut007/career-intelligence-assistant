# Career Intelligence Assistant - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-5.2-thinking

# ============================================================================
# Neo4j AuraDB Configuration
# Get free instance at: https://console.neo4j.io/
# ============================================================================
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password-here

# ============================================================================
# HuggingFace Configuration (for embeddings)
# Get token at: https://huggingface.co/settings/tokens
# ============================================================================
HF_TOKEN=hf_your-token-here

# ============================================================================
# Application Configuration
# ============================================================================
SESSION_SECRET_KEY=change-this-to-a-random-secret-key
RATE_LIMIT_PER_MINUTE=10
MAX_FILE_SIZE_MB=10
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=INFO
ENVIRONMENT=development

# ============================================================================
# Frontend Configuration (Vite)
# ============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
